<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textViewTitleFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:hint="CREA TU USUARIO !!"
            android:textColorHint="@color/purple_500" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/baseline_group_add_24"
            android:layout_marginBottom="25dp" />

        <!-- Campo de entrada para el nombre de usuario -->
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_user"
            android:inputType="text" />

        <!-- Campo de entrada para el apellido de usuario -->
        <EditText
            android:id="@+id/editTextUserLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name_user"
            android:inputType="text" />

        <!-- Campo de entrada para el alias de usuario -->
        <EditText
            android:id="@+id/editTextUserAlias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/alias_user"
            android:inputType="text" />

        <!-- Campo de entrada para las opciones de regalo -->
        <EditText
            android:id="@+id/editTextGiftName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_gift"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextGiftPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/price_gift"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextGiftNameTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="@string/name_gift_two"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextGiftPriceTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="@string/price_gift_two"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonAddGift"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_other_gift"
            android:layout_marginTop="25dp"/>

        <!-- BotÃ³n de registro -->
        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="REGISTRAR" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>